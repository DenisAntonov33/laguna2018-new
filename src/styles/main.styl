@import "fonts.css"

body
	margin 0
	padding 0
	font-family Circe
	font-size 17px
	
ul,li,input,select,a,table
	margin 0
	padding 0
	border 0

li 
	list-style none;
	
a 
	text-decoration none
	color black
	
.container
	margin 0 auto
	max-width 1325px
	background-color #f3f3f3
	padding-bottom 40px
	
/////////////////////////////
//       header-top        //
/////////////////////////////
	
.header-top {
	height 115px
	background-color white
	position relative
}

.logo
	width 155px
	height 31px
	background url(../img/laguna-logo.png) no-repeat
	
.logo:hover
	background url(../img/laguna-logo-hover.png) no-repeat

.header-top__logo // location in header-top
	position absolute
	left 50%
	top 50%
	margin auto
	margin-left -75px
	margin-top -15px
	
	
.menu	
	li 
		display inline-block
	&__link
		display inline-block
		margin-right 25px
		text-transform uppercase
		font-size 12px
		&_no-margin-rigth
			margin-right 0

.header-top__menu // location in header-top
	position absolute
	width 440px
	top 50%
	left 40px
	margin-top -10px
		
.contacts
	width 280px
	height 25px

.header-top__contacts // location in header-top
	position absolute
	top 50%
	right 40px
	margin-top -15px

.social	
	display inline-block
	height 25px
	margin 0
	padding 0
	&__icon 
		display inline-block
		margin 0
		padding 0
		margin-right 15px	
		width 25px
	&__phone
		float right

.phone
	display inline-block
	
	width 160px
	height 100%
	

/////////////////////////////
//       header-main       //
/////////////////////////////

.header-main
	height 550px
	background url(../img/sea.png) no-repeat
	background-size cover
	position relative
	&__title
		position absolute
		top 160px
		left 50%
		margin-left -230px
		width 460px
		height 65px
		font-size 29px
		line-height 31px
		font-family Circe-Bold
		color white
		text-align center
	&__fields
		top 250px
		left 50%
		margin-left -375px
		overflow hidden
		border-radius 100px
	&__main-button
		position absolute
		top 325px
		left 50%
		margin-left -135px

.fields
	width 745px
	height 55px
	position absolute
	box-sizing border-box
	
.main-button
	width 270px
	height 40px
	border-radius: 100px;
	cursor pointer
	color white
	text-align center
	padding-top 7px
	box-sizing border-box
	background-image: -webkit-linear-gradient(28deg, #96d9ff, #3898f0)
	background-image: -o-linear-gradient(28deg, #96d9ff, #3898f0)
	background-image: linear-gradient(118deg, #96d9ff, #3898f0)
	
.fields__input
	display inline-block
	height 54px
	border 0
	position relative
	&_pseudo
		.number::after
			background url(../img/arrow.png) no-repeat
		&::after
			content ""
			display block
			position absolute
			width 14px
			height 14px
			background url(../img/calendar.png) no-repeat
			top 50%
			margin-top -7px
			right 15px
			cursor pointer
	&_size-m
		width 47%
		margin-right 20px
		border-radius 100px
		overflow hidden
		&_no-margin
			margin-right 0
	&_size-s
		width 33.05%
		border-right 3px solid #e4e4e4
	&_size-l
		width 100%
		border-radius 100px
		overflow hidden
		margin-top 15px

	input,select
		width 100%
		height 100%
		option
			width 100%
			height 100%
		
.fields__input_no-right-border
	border 0
	
/////////////////////////////
//          main           //
/////////////////////////////

.main
	&__main-title
		text-decoration underline
		font-family Circe-Bold
		width 260px
		margin 35px auto
		
	&__main-wrapper
		margin 0 auto
	&__link
		display block
		font-size 13px
		color #0541a5
		padding-top 14px
	&__picture
		background url("../img/0055.jpg") no-repeat
		background-size cover
		&_size-m
			width 520px
			height 400px
		&_size-s
			width 520px
			height 350px
		

.main-wrapper
	background-color white
	width 1200px
	padding-bottom 40px
	
	
.main-block
	padding-top 50px
	margin 0 35px
	box-sizing border-box
	&::after
		clear both
		content ""
		display block
	&:first-child
		padding-top 30px
	&__left-side
		display inline-block
		width 48%
		box-sizing border-box
	&__right-side
		display inline-block
		width 48%
		float right
		padding-top 50px
	&__title
		font-family Circe-Bold
		margin-bottom 20px
	&__icons
		&_margin-size-s
			margin 20px 0
		&_margin-size-m
			margin 35px 0
		&_no-margin-bottom
			margin-bottom 0

.slider
	&__full-photo
		width 520px
		height 340px
		background-image url("../img/0055.jpg")
	&__mini-photoes
		width 520px
		height 65px
		margin-top 5px
	&__mini-photo
		display inline-block
		width 100px
		height 100%
		margin-right 5px
		background url("../img/0055.jpg")
		background-size cover
		cursor pointer
		&:last-child
			margin-right 0

.table
	background-color #f0f0f0
	padding 10px 10px 20px
	font-size 14px
	width 100%
	border 0
	border-collapse collapse
	&__row
		height 35px
		&:nth-child(2n)
			background-color white
			
.table__row:not(:first-child) td:not(:first-child)
	font-weight bold
		


/////////////////////////////
//      modal-window       //
/////////////////////////////

.modal-overlay 
	display none
	z-index 9
	width 100%
	height 100%
	position fixed
	top 0
	left 0
	background-color rgba(0,0,0,0.5)
	
.open
	display block !important


.modal-window 
	display none
	position fixed
	width 35%
	height 770px
	top 160px
	left 33%
	right 32%
	z-index 10
	background-color #fff
	&-container 
		width 90%
		height 90%
		margin 30px auto 0
		padding-top 50px
		box-sizing border-box
		text-align center
		position relative
	&__title
		font-family Circe-Bold
		font-size 29px
	&__close
		display block
		content ""
		position: absolute
		width 15px
		height 15px
		background-image url(../img/close-icon.svg)
		top 0
		right 0
		background-repeat no-repeat
		cursor pointer
	&__main-button
		margin 0 auto
	input,select
		background-color #f2f2f2

.modal-window-container form 
	width 75%
	height 90%
	margin 40px auto 0px

.value-guests 
	width 200px
	height 80px
	margin 20px auto


.value-guests-inner 
	button 
		display inline-block
		width 10px
		height 20px
		background-image url(../img/plus-icon.svg)
		background-repeat no-repeat
		background-position 50%
		background-color #fff
		border 0
		cursor pointer
	.btn-minus 
		background-image url(../img/minus-icon.svg)
	span 
		font-size 29px
		font-family 'Circe-Bold'
		margin 15px

.value-guests-outer 
	display block
	margin-top 15px
	color #d12f2f

.disabled
	cursor default !important
	background none !important
	border none