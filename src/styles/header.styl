/////////////////////////////
//       header-top        //
/////////////////////////////
	
.header-top {
	height 115px
	background-color white
	position relative
}

.logo
	width 155px
	height 31px
	background url(../img/laguna-logo.png) no-repeat
	
.logo:hover
	background url(../img/laguna-logo-hover.png) no-repeat

.header-top__logo // location in header-top
	position absolute
	left 50%
	top 50%
	margin auto
	margin-left -75px
	margin-top -15px
	
	
.menu	
	li 
		display inline-block
	&__link
		display inline-block
		margin-right 25px
		text-transform uppercase
		font-size 12px
		&_no-margin-rigth
			margin-right 0

.header-top__menu // location in header-top
	position absolute
	width 440px
	top 50%
	left 40px
	margin-top -10px
		
.contacts
	width 280px
	height 25px

.header-top__contacts // location in header-top
	position absolute
	top 50%
	right 40px
	margin-top -15px

.social	
	display inline-block
	height 25px
	margin 0
	padding 0
	&__icon 
		display inline-block
		margin 0
		padding 0
		margin-right 15px	
		width 25px
	&__phone
		float right

.phone
	display inline-block
	
	width 160px
	height 100%
	

/////////////////////////////
//       header-main       //
/////////////////////////////

.header-main
	height 550px
	background url(../img/sea.png) no-repeat
	background-size cover
	position relative
	&__title
		position absolute
		top 160px
		left 50%
		margin-left -230px
		width 460px
		height 65px
		font-size 29px
		line-height 31px
		font-family Circe-Bold
		color white
		text-align center
	&__fields
		top 250px
		left 50%
		margin-left -375px
		overflow hidden
		border-radius 100px
	&__main-button
		position absolute
		top 325px
		left 50%
		margin-left -135px

.fields
	width 745px
	height 55px
	position absolute
	box-sizing border-box
	
.main-button
	width 270px
	height 40px
	border-radius: 100px;
	cursor pointer
	color white
	text-align center
	padding-top 7px
	box-sizing border-box
	background-image: -webkit-linear-gradient(28deg, #96d9ff, #3898f0)
	background-image: -o-linear-gradient(28deg, #96d9ff, #3898f0)
	background-image: linear-gradient(118deg, #96d9ff, #3898f0)
	
.fields__input
	display inline-block
	height 54px
	border 0
	position relative
	&_pseudo
		.number::after
			background url(../img/arrow.png) no-repeat
		&::after
			content ""
			display block
			position absolute
			width 14px
			height 14px
			background url(../img/calendar.png) no-repeat
			top 50%
			margin-top -7px
			right 15px
			cursor pointer
	&_size-m
		width 47%
		margin-right 20px
		border-radius 100px
		overflow hidden
		&_no-margin
			margin-right 0
	&_size-s
		width 33.05%
		border-right 3px solid #e4e4e4
	&_size-l
		width 100%
		border-radius 100px
		overflow hidden
		margin-top 15px

	input,select
		width 100%
		height 100%
		option
			width 100%
			height 100%
		
.fields__input_no-right-border
	border 0